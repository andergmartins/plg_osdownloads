<?xml version="1.0" encoding="utf-8"?>
<extension version="2.5" type="plugin" group="search" method="upgrade">
    <name>OSDOWNLOADS_PLG_SEARCH</name>
    <creationDate>2014-10-27</creationDate>
    <author>Akema</author>
    <authorEmail>akema.contact@gmail.com</authorEmail>
    <authorUrl></authorUrl>
    <copyright></copyright>
    <license></license>
    <version>0.1</version>
    <description>OSDOWNLOADS_PLG_SEARCH_XML_DESCRIPTION</description>
    <files>
        <filename plugin="osdownloads">osdownloads.php</filename>
        <filename>index.html</filename>
    </files>
    <languages>
        <language tag="fr-FR">language/fr-FR/fr-FR.plg_search_osdownloads.ini</language>
        <language tag="fr-FR">language/fr-FR/fr-FR.plg_search_osdownloads.sys.ini</language>
    </languages>
    <config>
        <fields name="params">

            <fieldset name="basic">

                <field name="search_limit" type="text"
                       default="50"
                       label="JFIELD_PLG_SEARCH_SEARCHLIMIT_LABEL"
                       description="JFIELD_PLG_SEARCH_SEARCHLIMIT_DESC"
                       size="5"
                        />

                <field name="search_content" type="radio"
                       default="0"
                       description="JFIELD_PLG_SEARCH_ALL_DESC"
                       label="JFIELD_PLG_SEARCH_ALL_LABEL"
                        >
                    <option value="0">JOFF</option>
                    <option value="1">JON</option>
                </field>

            </fieldset>
        </fields>
    </config>
</extension>
